mixin pagination(page, totalPages, count)
  .pagination
    .pagination__prev
      if (page > 1)
        a(href=`/stores/page/${+page - 1}`) Prev
    .pagination__text
      p Page #{page} of #{totalPages} - #{count} total results
    .pagination__next
      if (page < totalPages)
        a(href=`/stores/page/${+page + 1}`) Next